<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="1"
        android:id="@+id/btn_1"
        android:layout_marginTop="152dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="2"
        android:id="@+id/btn_2"
        android:layout_alignTop="@+id/btn_1"
        android:layout_toEndOf="@+id/btn_1" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="3"
        android:id="@+id/btn_3"
        android:layout_alignTop="@+id/btn_2"
        android:layout_toEndOf="@+id/btn_2" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="+"
        android:id="@+id/btn_plus"
        android:layout_alignTop="@+id/btn_3"
        android:layout_toEndOf="@+id/btn_3" />


    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="4"
        android:id="@+id/btn_4"
        android:layout_below="@+id/btn_1" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="5"
        android:id="@+id/btn_5"
        android:layout_alignTop="@+id/btn_4"
        android:layout_toEndOf="@+id/btn_4" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="6"
        android:id="@+id/btn_6"
        android:layout_alignTop="@+id/btn_5"
        android:layout_toEndOf="@+id/btn_5" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="-"
        android:id="@+id/btn_minur"
        android:layout_alignTop="@+id/btn_6"
        android:layout_toEndOf="@+id/btn_6" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="7"
        android:id="@+id/btn_7"
        android:layout_below="@+id/btn_4"/>

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="8"
        android:id="@+id/btn_8"
        android:layout_alignTop="@+id/btn_7"
        android:layout_toEndOf="@+id/btn_7" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="9"
        android:id="@+id/btn_9"
        android:layout_alignTop="@+id/btn_8"
        android:layout_toEndOf="@+id/btn_8" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="*"
        android:id="@+id/btn_multiply"
        android:layout_alignTop="@+id/btn_9"
        android:layout_toEndOf="@+id/btn_9" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="reset"
        android:id="@+id/btn_reset"
        android:layout_below="@+id/btn_7"/>

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="0"
        android:id="@+id/btn_0"
        android:layout_alignTop="@+id/btn_reset"
        android:layout_toEndOf="@+id/btn_reset" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="del"
        android:id="@+id/btn_delete"
        android:layout_alignTop="@+id/btn_0"
        android:layout_toEndOf="@+id/btn_0" />

    <Button
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="/"
        android:id="@+id/btn_divide"
        android:layout_alignTop="@+id/btn_delete"
        android:layout_toEndOf="@+id/btn_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_2"
        android:layout_alignEnd="@+id/btn_3"
        android:textStyle="normal"
        android:gravity="top|fill_vertical|fill_horizontal"
        android:textColor="#00ffffff"
        android:background="#ff000000" />

</RelativeLayout>
